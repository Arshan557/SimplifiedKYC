<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26a69a"
    tools:context=".Activities.HomeActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:weightSum="8"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:layout_weight="1"
            android:paddingRight="24dp"
            android:text="@string/placeFinger"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="14dip" />

        <EditText
            android:id="@+id/aadharNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-0.25dp"
            android:background="@drawable/bg_card_number_edit_text"
            android:drawableRight="@drawable/ic_card_number"
            android:hint="Enter Aadhar number   "
            android:inputType="phone"
            android:padding="16dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGray"
            android:textSize="18sp"
            tools:ignore="LabelFor,NegativeMargin" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="307dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:src="@drawable/fingerprint" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text=" SUBMIT DETAILS "
            android:layout_weight="0"
            android:theme="@style/AppThemeButton"
            app:backgroundTint="#3f974b"
            app:backgroundTintMode="multiply"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#ffee33"
            app:strokeColor="#8edea7"
            app:strokeWidth="2dp" />

    </LinearLayout>

</RelativeLayout>
